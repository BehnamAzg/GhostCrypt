---
import Tab from "./Tab.astro";

const { active = "" } = Astro.props;
---

<div role="tablist" class="tabs tabs-sm tabs-box rounded-lg">
  <Tab icon="settings" text="Settings" tabClass={
    active === "settings" && "tab-active bg-primary text-base-100 hover:bg-secondary"
  } />
  <Tab icon="home" text="Home" tabClass={
    active === "home" && "tab-active bg-primary text-base-100 hover:bg-secondary"
  } />
  <Tab icon="chat" text="Messages" tabClass={
    active === "messages" && "tab-active bg-primary text-base-100 hover:bg-secondary"
  } />
</div>