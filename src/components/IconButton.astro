---
import Icon from "./Icon.astro";

const { text = "", icon = "", size = "16", action = "", btnClass, tootipClass, i18n = "" } = Astro.props;
---
<div class=`tooltip text-xs ${tootipClass}` data-tip={text} data-i18n-tip={i18n}>
  <button class=`btn btn-sm btn-square ${btnClass}` data-action={action}>
    {icon && <Icon icon={icon} size={size} />}
  </button>
</div>