---
import Button from "./Button.astro";
import Header from "./Header.astro";
import Language from "./Language.astro";
import PrivacyAndSecurity from "./PrivacyAndSecurity.astro";
import Tabs from "./Tabs.astro";
import Theme from "./Theme.astro";
---

<div class="max-w-sm max-sm:w-full h-screen flex-center flex-col justify-between mx-auto gap-4 py-6 max-sm:px-4 select-none relative tab-content hidden" id="settingsTab">
  <Header btnAction="none" />
  <div class="w-full flex flex-col gap-3 max-sm:gap-6 enter-scale">
    <div class="w-full flex">
      <Theme />
      <Language />
    </div>
    <!-- <PrivacyAndSecurity /> -->
    <div class="flex flex-wrap gap-2 mt-2">
      <a href="https://github.com/BehnamAzg/GhostCrypt" target="_blank" class="flex-1">
        <Button text="Github Page" icon="github" btnClass="btn-md text-xs px-3 w-full whitespace-nowrap" i18n="link.github" />
      </a>
      <a href="https://github.com/BehnamAzg/GhostCrypt/releases" target="_blank" class="">
        <Button text="Release Notes" icon="clipboard" btnClass="btn-md text-xs px-3 whitespace-nowrap" i18n="link.releases" />
      </a>
      <a href="https://github.com/BehnamAzg/GhostCrypt/issues" target="_blank" class="">
        <Button text="Report Bugs" icon="bug" btnClass="btn-md text-xs px-3 whitespace-nowrap" i18n="link.issues" />
      </a>
      <a href="https://github.com/BehnamAzg/GhostCrypt?tab=readme-ov-file#readme" target="_blank" class="flex-1">
        <Button text="About GhostCrypt" icon="infoCircle" btnClass="btn-md text-xs px-3 w-full whitespace-nowrap" i18n="link.about" />
      </a>
      <a href="https://behnamazg.github.io/Donation/" target="_blank" class="flex-1">
        <Button text="Donate" icon="heart" btnClass="btn-md text-xs px-3 w-full whitespace-nowrap" i18n="link.donate" />
      </a>
    </div>
    <div id="installEl" class="w-full flex-col gap-2.5 hidden">
      <p class="text-center text-xs font-semibold text-primary mt-2 w-full" data-i18n="button.install-label">For offline use, install the app on your device:</p>
      <Button text="Install the App" icon="download" btnClass="btn-md btn-primary text-base-100 w-full" action="installApp" i18n="button.install" />
    </div>
  </div>
  <Tabs active="settings" />
</div>
