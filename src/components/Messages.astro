---
import Header from "./Header.astro";
import IconButton from "./IconButton.astro";
import MessagePreview from "./MessagePreview.astro";
import Modal from "./Modal.astro";
import Tabs from "./Tabs.astro";
---

<div class="max-w-sm max-sm:w-full h-screen flex-center flex-col justify-between mx-auto gap-4 py-6 max-sm:px-4 select-none relative tab-content hidden" id="messagesTab">
  <Header btnAction="infoMessages" />
  <div class="w-full flex flex-col gap-3 max-sm:gap-6 h-full overflow-y-auto no-scrollbar enter-scale">
    <fieldset class="fieldset w-full">
      <label for="input" class="label w-fit font-bold mb-2">Your Contacts on GhostCrypt:</label>
      <MessagePreview />
      <MessagePreview />
    </fieldset>
  </div>

  <div class="flex justify-between items-center w-full overflow-hidden">
    <IconButton btnClass="invisible" />
    <Tabs active="messages" />
    <IconButton text="Add Contact" icon="plus" btnClass="btn-primary  text-base-100 rounded-full hover:bg-secondary border-none" action="addContact" />
  </div>

  
  <Modal id="infoMessages" title="Messages Page Info" />
  <Modal id="addContact" title="Add Contact" />
</div>

